import os
tools = ['ddssvc', 'rr314', 'bittware', 'deploy']
env = Environment(tools = ['default'] + tools)

# libraries:
libs = Split("""
boost_program_options
ReliableMulticast 
SimpleUnreliableDgram 
SimpleTcp
OpenDDS_Dcps
TAO_PortableServer
TAO_AnyTypeCode
dl
rt
rr314""")

env.Append(LIBS = libs)

# build dual board application
eldoradrx = env.Program('eldoradrx', 'RR314dual.cpp')

Default(eldoradrx)

env.DeployProgram(eldoradrx)


