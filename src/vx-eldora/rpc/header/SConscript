env = Environment(tools = ["default"])

sources = Split("""
Header.cc
""")

headers = Split("""
Header.h
TapeHeader.h
""")

rpcdefs = Split("""
HeaderRpc.x
""")

headers += env.RPCGenHeader(rpcdefs)

env.AppendUnique(CPPPATH = ["../include"])
env.Install("../include", headers)

l = env.Library("VxHeader", sources)
li = env.InstallLibrary(l)
Default(li)
