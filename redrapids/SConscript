import os

env = Environment(ENV = os.environ)
env['RR314_ROOT'] = os.environ.get('RR314_ROOT',None)
env.AppendUnique(CPPPATH=['$RR314_ROOT',])
env.AppendUnique(CCFLAGS=['-D LINUX',])

# libraries:
libs = Split("""
ca
channeladapter
pthread
""")

# library paths:
libpaths=Split("""
$RR314_ROOT/linux_x86-32
#/tmp
""")

# Build librr
sources = Split("""
FilterSpec.cpp
RR314.cpp
""")

librr = env.Library('rr', sources,
   LIBS=libs, LIBPATH=libpaths )

# build test
testrr = env.Program('testrr314', 'test.cpp', LIBS=[librr,libs], LIBPATH=libpaths)
