tools = ['default', 'ddssvc', 'qtt_knob', 'qtt_qtconfig', 'sdrscope']
env = Environment(tools = tools)

# libraries:
libs = Split("""
boost_program_options
ReliableMulticast 
SimpleUnreliableDgram 
SimpleTcp
OpenDDS_Dcps
TAO_PortableServer
TAO_AnyTypeCode
dl
rt
""")

env.AppendUnique(LIBS = libs)

# This will create ui_EldoraScope.h
env.Uic4(['EldoraScope.ui',])

sources = Split("""
main.cpp
EldoraScope.cpp
EldoraScopeSource.cpp
EldoraScopeTSReader.cpp
EldoraScopeABPReader.cpp
PlotInfo.cpp
""")

eldorascope = env.Program('eldorascope', sources)
	
Default(eldorascope)

